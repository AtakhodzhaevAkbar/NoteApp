<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.note.NoteDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerFN"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/returnBtn"
            android:background="@drawable/return_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="170dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6мая"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/returnBtn"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/dateTV"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Готово"
            android:textColor="#D88B02"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/timeTV"
            tools:ignore="MissingConstraints" />
        <EditText
            android:textColor="@color/white"
            android:id="@+id/titleET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:hint="Введите заголовок"
            android:textColorHint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/timeTV"
            tools:ignore="MissingConstraints" />
        <EditText
            android:textColor="@color/white"
            android:id="@+id/descriptionET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:hint="Введите заметку"
            android:textColorHint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/titleET"
            tools:ignore="MissingConstraints"/>


        <RadioGroup
            android:id="@+id/colorSelectionRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp">


            <RadioButton
                android:id="@+id/btnColorGray"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#191818"/>


            <RadioButton
                android:id="@+id/btnColorWhite"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#EBE4C9"/>


            <RadioButton
                android:id="@+id/btnColorBrown"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#571818"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
